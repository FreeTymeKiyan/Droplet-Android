<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
	>
	
    <RelativeLayout
        android:id="@+id/reference_titleBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/main_title_bar"
        >
        
        <ImageButton 
            android:id="@+id/reference_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/preference_back_light"
            android:contentDescription="@drawable/add_cancel"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            />
        
        <TextView 
            android:id="@+id/reference_createHabit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reference"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:textColor="#ffffff"
            style="@style/StyleTextViewShadow"
            />
        
    </RelativeLayout>
    
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_below="@id/reference_titleBar"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        >
        <RelativeLayout 
            android:id="@+id/reference_scrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <!-- 分享管理的标签 -->
            <TextView 
	            android:id="@+id/reference_addHabitHint"
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:text="@string/share_settings"
	            android:textSize="15sp"
	            android:textColor="#70b7b9"
	            android:layout_marginTop="26dp"
	            android:layout_marginLeft="20dp"
            	/>
        	<!-- 分享的管理 -->
	        <RelativeLayout 
	            android:id="@+id/reference_habitAttributes"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/attributes_bg"
	            android:layout_marginTop="10dp"
	            android:layout_below="@+id/reference_addHabitHint"
	            android:paddingBottom="13dp"
	            >
	            	<ImageView 
					    android:id="@+id/reference_Image"
					    android:background="@drawable/sync_weibo"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					   	android:layout_alignParentLeft="true"
					    android:layout_marginTop="10dp"
			        	android:layout_marginLeft="20dp"
					    android:contentDescription="显示状态"
					    /> 
					<Button 
					    android:id="@+id/reference_weibo_Words"
					    android:layout_width="wrap_content"
					    android:layout_height="35sp"
					    android:layout_alignParentRight="true"
					    android:textSize="12sp"
					    android:textColor="#ffffff"
					    android:layout_marginRight="11dp"
					    />
	            <ImageView 
	                android:id="@+id/reference_devider"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:src="@drawable/line"
	                android:contentDescription="@drawable/line"
	                android:layout_below="@+id/reference_Image"
	                android:layout_marginTop="7dp"
	                android:paddingLeft="26dp"
	                android:paddingRight="26dp"
	                />
				   <ImageView 
					    android:id="@+id/reference_renren_Image"
					    android:background="@drawable/sync_renren"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_alignParentLeft="true"
					   	android:layout_centerVertical="true"
					   	android:layout_below="@+id/reference_devider"
					    android:layout_marginTop="10dp"
			        	android:layout_marginLeft="20dp"
					    android:contentDescription="显示状态"
					    /> 
					<Button 
					    android:id="@+id/reference_renren_Words"
					    android:layout_width="wrap_content"
					    android:layout_below="@+id/reference_devider"
					    android:layout_height="35sp"
					    android:layout_alignParentRight="true"
					    android:textSize="12sp"
					    android:textColor="#ffffff"
					    android:layout_marginRight="11dp"
					    /></RelativeLayout>
	        <!-- 习惯管理的标签 -->
	        <TextView 
	            android:id="@+id/Reference_manager"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/Reference_manager"
	            android:textSize="15sp"
	            android:textColor="#70b7b9"
	            android:layout_below="@+id/reference_habitAttributes"
	            android:layout_marginTop="26dp"
	            android:layout_marginLeft="20dp"/>
	        <!-- 习惯的管理 -->
	        <RelativeLayout 
	            android:id="@+id/reference__tab_habit_manager"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/attributes_bg"
	            android:layout_marginTop="10dp"
	            android:layout_below="@+id/Reference_manager"
	            android:paddingBottom="13dp">
				<!-- 习惯的管理的详细内容，文字和按钮 -->
				<TextView 
					    android:id="@+id/habit_text_0"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					   	android:layout_alignParentLeft="true"
					    android:layout_marginTop="10dp"
			        	android:layout_marginLeft="20dp"
					    android:contentDescription="显示状态"
					    /> 
				<Button 
					  	android:id="@+id/habit_button_0"
					    android:layout_width="wrap_content"
					    android:layout_height="35sp"
					    android:layout_alignParentRight="true"
					    android:textSize="12sp"
					    android:textColor="#ffffff"
					    android:layout_marginRight="11dp"
					    />
	            <ImageView 
	                android:id="@+id/reference_devider_0"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:src="@drawable/line"
	                android:contentDescription="@drawable/line"
	                android:layout_below="@+id/habit_text_0"
	                android:layout_marginTop="7dp"
	                android:paddingLeft="26dp"
	                android:paddingRight="26dp"
	                />
	            <TextView 
					    android:id="@+id/habit_text_1"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					   	android:layout_alignParentLeft="true"
					    android:layout_marginTop="10dp"
			        	android:layout_marginLeft="20dp"
					    android:contentDescription="显示状态"
					    android:layout_below="@+id/reference_devider_0"/> 
				<Button 
					  android:id="@+id/habit_button_1"
					  android:layout_width="wrap_content"
					  android:layout_height="35sp"
					  android:layout_alignParentRight="true"
					  android:textSize="12sp"
					  android:textColor="#ffffff"
					  android:layout_marginRight="11dp"
					  android:layout_below="@+id/reference_devider_0"/>
				<ImageView 
	                android:id="@+id/reference_devider_1"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:src="@drawable/line"
	                android:contentDescription="@drawable/line"
	                android:layout_below="@+id/habit_text_1"
	                android:layout_marginTop="7dp"
	                android:paddingLeft="26dp"
	                android:paddingRight="26dp"
	                />
	            <TextView 
					    android:id="@+id/habit_text_2"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					   	android:layout_alignParentLeft="true"
					    android:layout_marginTop="10dp"
			        	android:layout_marginLeft="20dp"
			        	android:layout_below="@+id/reference_devider_1"
					    android:contentDescription="显示状态"/> 
				<Button 
					  android:id="@+id/habit_button_2"
					  android:layout_width="wrap_content"
					  android:layout_height="35sp"
					  android:layout_alignParentRight="true"
					  android:textSize="12sp"
					  android:textColor="#ffffff"
					  android:layout_marginRight="11dp"
					  android:layout_below="@+id/reference_devider_1"/>
				<ImageView 
	                android:id="@+id/reference_devider_2"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:src="@drawable/line"
	                android:contentDescription="@drawable/line"
	                android:layout_below="@+id/habit_text_2"
	                android:layout_marginTop="7dp"
	                android:paddingLeft="26dp"
	                android:paddingRight="26dp"
	                />
	            <TextView 
					    android:id="@+id/habit_text_3"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					   	android:layout_alignParentLeft="true"
					    android:layout_marginTop="10dp"
			        	android:layout_marginLeft="20dp"
			        	android:layout_below="@+id/reference_devider_2"
					    android:contentDescription="显示状态"/> 
				<Button 
					  android:id="@+id/habit_button_3"
					  android:layout_width="wrap_content"
					  android:layout_height="35sp"
					  android:layout_alignParentRight="true"
					  android:textSize="12sp"
					  android:textColor="#ffffff"
					  android:layout_marginRight="11dp"
					  android:layout_below="@+id/reference_devider_2"/>
				<ImageView 
		                android:id="@+id/reference_devider_3"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:src="@drawable/line"
		                android:contentDescription="@drawable/line"
		                android:layout_below="@+id/habit_text_3"
		                android:layout_marginTop="7dp"
		                android:paddingLeft="26dp"
		                android:paddingRight="26dp"
		                />
	            <TextView 
					    android:id="@+id/habit_text_4"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					   	android:layout_alignParentLeft="true"
					    android:layout_marginTop="10dp"
			        	android:layout_marginLeft="20dp"
			        	android:layout_below="@+id/reference_devider_3"
					    android:contentDescription="显示状态"/> 
				<Button 
					  android:id="@+id/habit_button_4"
					  android:layout_width="wrap_content"
					  android:layout_height="35sp"
					  android:layout_alignParentRight="true"
					  android:textSize="12sp"
					  android:textColor="#ffffff"
					  android:layout_marginRight="11dp"
					  android:layout_below="@+id/reference_devider_3"/>
				<ImageView 
		                android:id="@+id/reference_devider_4"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:src="@drawable/line"
		                android:contentDescription="@drawable/line"
		                android:layout_below="@+id/habit_text_4"
		                android:layout_marginTop="7dp"
		                android:paddingLeft="26dp"
		                android:paddingRight="26dp"
		                />
	            <TextView 
					    android:id="@+id/habit_text_5"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					   	android:layout_alignParentLeft="true"
					    android:layout_marginTop="10dp"
			        	android:layout_marginLeft="20dp"
			        	android:layout_below="@+id/reference_devider_4"
					    android:contentDescription="显示状态"/> 
				<Button 
					  android:id="@+id/habit_button_5"
					  android:layout_width="wrap_content"
					  android:layout_height="35sp"
					  android:layout_alignParentRight="true"
					  android:textSize="12sp"
					  android:textColor="#ffffff"
					  android:layout_marginRight="11dp"
					  android:layout_below="@+id/reference_devider_4"/>
				<ImageView 
		                android:id="@+id/reference_devider_5"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:src="@drawable/line"
		                android:contentDescription="@drawable/line"
		                android:layout_below="@+id/habit_text_5"
		                android:layout_marginTop="7dp"
		                android:paddingLeft="26dp"
		                android:paddingRight="26dp"
		                />
	            <TextView 
					    android:id="@+id/habit_text_6"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					   	android:layout_alignParentLeft="true"
					    android:layout_marginTop="10dp"
			        	android:layout_marginLeft="20dp"
			        	android:layout_below="@+id/reference_devider_5"
					    android:contentDescription="显示状态"/> 
				<Button 
					  android:id="@+id/habit_button_6"
					  android:layout_width="wrap_content"
					  android:layout_height="35sp"
					  android:layout_alignParentRight="true"
					  android:textSize="12sp"
					  android:textColor="#ffffff"
					  android:layout_marginRight="11dp"
					  android:layout_below="@+id/reference_devider_5"/>
			</RelativeLayout>
			<!-- droplet的标签 -->
			<TextView 
	            android:id="@+id/droplet_settings"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/droplet_settings"
	            android:textSize="15sp"
	            android:textColor="#70b7b9"
	            android:layout_below="@+id/reference__tab_habit_manager"
	            android:layout_marginTop="26dp"
	            android:layout_marginLeft="20dp"/>
			<!-- droplet的管理 -->
		    <RelativeLayout 
	            android:id="@+id/reference__tab_droplet"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/attributes_bg"
	            android:layout_marginTop="10dp"
	            android:layout_below="@+id/droplet_settings"
	            >
				<TextView 
					    android:id="@+id/reference_about"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					   	android:layout_alignParentLeft="true"
					   	android:textSize="15sp"
			        	android:textColor="@android:color/black"
			        	android:text="@string/about_drop"
			        	android:layout_marginTop="10dp"
			        	android:layout_marginLeft="20dp"/> 
	           <ImageView 
	                android:id="@+id/reference_devider_two"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:src="@drawable/line"
	                android:contentDescription="@drawable/line"
	                android:layout_below="@+id/reference_about"
	                android:layout_marginTop="7dp"
	                android:paddingLeft="26dp"
	                android:paddingRight="26dp"
	                />
	           	<TextView 
					android:id="@+id/version_detect"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:textSize="15sp"
			       	android:textColor="@android:color/black"
			        android:layout_below="@+id/reference_devider_two"
			        android:text="@string/version_detect"
			       	android:layout_marginTop="10dp"
			        android:layout_marginLeft="20dp"/> 	           
			</RelativeLayout>
		</RelativeLayout>          
	</ScrollView>  
</RelativeLayout>